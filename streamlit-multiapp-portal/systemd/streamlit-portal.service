[Unit]
Description=Streamlit Multi-App Portal
After=network.target

[Service]
WorkingDirectory=/srv/portal/portal_streamlit
Environment=PORTAL_CANONICAL_ORIGIN=https://msk.avito-streamlit.ru:8501
Environment=APPS_ROOT=/srv/portal/apps
ExecStart=/usr/bin/env bash -lc 'streamlit run main.py --server.port=8501 --server.address=0.0.0.0 --server.headless=true'
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
